<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/backgreoundtext"
    tools:context=".Activity.AddHistoryActivity">

    <TextView
        android:id="@+id/addHistoryTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/appBackGround"
        android:paddingBottom="5dp"
        android:drawablePadding="8dp"
        android:text="Add"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/red"
        android:drawableRight="@drawable/post"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/closeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/appBackGround"
        android:drawableLeft="@drawable/cancle"
        android:drawablePadding="8dp"
        android:paddingBottom="5dp"
        android:text="Cancle"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:background="@color/red"
        app:layout_constraintTop_toBottomOf="@+id/closeTV" />


    <TextView
        android:id="@+id/newDemo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="8dp"
        android:text="Donated Date :"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view1" />

    <EditText
        android:id="@+id/donationDateET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/background_edittext"
        android:hint="Enter date of donation"
        android:imeOptions="actionNext"
        android:clickable="true"
        android:drawableRight="@drawable/calender"
        android:padding="10dp"
        android:focusable="false"
        app:layout_constraintTop_toBottomOf="@+id/newDemo" />


    <TextView
        android:id="@+id/demo6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="8dp"
        android:text="Location :"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/donationDateET" />

    <EditText
        android:id="@+id/locationET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_edittext"
        android:hint="Enter the Location"
        android:imeOptions="actionNext"
        android:inputType="textCapWords"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/demo6"
        tools:layout_editor_absoluteX="10dp" />

    <TextView
        android:id="@+id/demo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="8dp"
        android:text="Description :"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationET" />

    <AutoCompleteTextView
        android:id="@+id/donationDescriptionEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/background_edittext"
        android:hint="Enter the district"
        android:imeOptions="actionGo"
        android:inputType="textCapWords"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/demo3" />

</androidx.constraintlayout.widget.ConstraintLayout>